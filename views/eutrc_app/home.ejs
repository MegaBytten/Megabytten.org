<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EUTRC APP | Home</title>

    <style>
        body {
            background-color: rgb(25,25,25);
        }
        
        .page {
            display: flex;
        }

        .left-nav-section {
            width: 80px;
            padding: 10px;
            /* padding-left: 10px; */
            padding-right: 20px;
            display: flex;
            flex-direction: column;
            row-gap: 30px;
            padding-top: 40px;
            border-left: 0px;
            border-top: 0px;
            border-right: 1px;
            border-bottom: 0px;
            border-style: solid;
            border-color: black;
        }

        .icon-btns {
            border: none;
        }

        .icon-imgs {
            width: 100%;
            cursor: pointer;
        }

        .right-content-section {
            flex: 8;
            display: flex;
            flex-direction: column;
            padding: 15px;
            padding-left: 40px;
        }

        .right-content {
            flex: 8;
            display: none;
            flex-direction: column;
            color: rgb(252, 237, 218);
        }

        .trainings-section {
            display: flex;
            flex-direction: column;
            color: bisque;
            justify-content: center;
            padding: 10px;
        }

        .welcome-msg {
            text-align:center;
            margin-bottom: 20px;
        }

        h2 {
            border-top: 0px;
            border-left: 0px;
            border-right: 0px;
            border-bottom: 1px;
            border-style: solid;
            border-color: beige;
            padding: 5px;
            margin-bottom: 10px;
        }

        .hp-training {
            display: flex;
            flex-direction: column;
        }

        .training-info {
            margin-left: 10px;
            display: flex;
            flex-direction: column;
            row-gap: 10px;
            margin-bottom: 30px;
        }

        /* Exclusively calendar stuff */
        .calendar-wrapper {
            display: flex;
            flex-direction: column;
            row-gap: 10px;
        }

        .title-section{
            display: flex;
            justify-content:space-evenly;
            flex-direction: row;
            border-top: 0px;
            border-left: 0px;
            border-right: 0px;
            border-bottom: 1px;
            border-style: solid;
            border-color: antiquewhite;
        }

        .weekday-labels-container {
            display: flex;
            flex-direction: row;
        }

        .weekday-labels {
            flex: 1;
            padding: 5px;
            border-top: 1px;
            border-left: 1px;
            border-right: 1px;
            border-bottom: 1px;
            border-style: solid;
            border-color: antiquewhite;
        }

    </style>
</head>
<body>
    
    <div class="page">
        <div class="left-nav-section">
            <a 
                class="icon-btns"
                href="/"
            >
                <img 
                    class="icon-imgs"
                    src="/website images/mb_logo.png" 
                    alt="MegaBytten Logo"
                >
            </a>

        
            <img 
                class="icon-imgs"
                onclick="showHome()"
                src="/website images/eutrc app/icons/home_icon.png" 
                alt="Home Icon"
            >

            <img 
                class="icon-imgs"
                onclick="showEvents()"
                src="/website images/eutrc app/icons/events_icon.png" 
                alt="Events Icon"
            >
            
        </div>
        <!-- This right content section will be what changes on button click -->
        <div class="right-content-section">

            <!-- This div holds all the page information for the HOME page -->
            <div class="right-content" name="homePage" id="homePage" style="display:flex;"> 
                <h1 style="text-align:center ;">
                    EUTRC Home
                </h1>
    
                <text class="welcome-msg">Welcome back <%=userInfo['name']%></text>
    
                <div class="trainings-section">
                    <h2>Upcoming EUTRC Trainings</h2>
    
                    <div class="hp-training">
                        <h3>High Performance (HP)</h3>
                        <% if (hpTraining['date_day'] != 'none') { %>
                            <div class="training-info">
                                <text>Date: <%= hpTraining['date_day'] %>/<%= hpTraining['date_month'] %>/<%= hpTraining['date_year'] %></text>
                                <text>Time: <%= hpTraining['time'] %></text>
                                <text>Location: <%= hpTraining['location'] %></text>
                                <text>Drills: <%= hpTraining['drills'] %></text>
                            </div>
                        <% } else { %> 
                            <p style="margin-left: 10px;margin-bottom: 20px;">There is no High Performance training within the next week.</p>
                        <% } %> 
                    </div>
    
                    <div class="dv-training">
                        <h3>Development (DV)</h3>
                        <% if (dvTraining['date_day'] != 'none') { %>
                            <div class="training-info">
                                <text>Date: <%= dvTraining['date_day'] %>/<%= dvTraining['date_month'] %>//<%= dvTraining['date_year'] %></text>
                                <text>Time: <%= dvTraining['time'] %></text>
                                <text>Location: <%= dvTraining['location'] %></text>
                                <text>Drills: <%= dvTraining['drills'] %></text>
                            </div>
                        <% } else { %> 
                            <p style="margin-left: 10px;margin-bottom: 20px;">There is no Development training within the next week.</p>
                        <% } %> 
                    </div>
    
                    <div class="cb-training">
                        <h3>Club (CB)</h3>
                        <% if (cbTraining['date_day'] != 'none') { %>
                            <div class="training-info">
                                <text>Date: <%= cbTraining['date_day'] %>/<%= cbTraining['date_month'] %>//<%= cbTraining['date_year'] %></text>
                                <text>Time: <%= cbTraining['time'] %></text>
                                <text>Location: <%= cbTraining['location'] %> </text>
                                <text>Drills: <%= cbTraining['drills'] %></text>
                            </div>
                        <% } else { %> 
                            <p style="margin-left: 10px;margin-bottom: 20px;">There is no Club training within the next week.</p>
                        <% } %> 
                    </div>
                </div>
            </div>

            <!-- This div holds all the page information for the EVENTS page -->
            <div class="right-content" name="eventsPage" id="eventsPage"> 
                <h1 style="text-align:center ;">
                    EUTRC Events
                </h1>

                <!-- This is the calendar! -->
                <div class="calendar-wrapper">
                    <div class="title-section">
                        <button>&#8592</button>
                        <h3>MONTH</h3>
                        <button>&#8594</button>
                    </div>

                    <div class="weekday-labels-container">
                        <text class="weekday-labels">Monday</text>
                        <text class="weekday-labels">Tuesday</text>
                        <text class="weekday-labels">Wednesday</text>
                        <text class="weekday-labels">Thursday</text>
                        <text class="weekday-labels">Friday</text>
                        <text class="weekday-labels">Saturday</text>
                        <text class="weekday-labels">Sunday</text>
                    </div>

                    <div class="cells-container">

                    </div>

                </div>

            </div>
            
        </div>
    </div>

    <script>
        function showHome(){
            let homePageObj = document.getElementById('homePage')
            homePageObj.style.display = 'flex'

            let eventsPageObj = document.getElementById('eventsPage')
            eventsPageObj.style.display = 'none'
        }

        function showEvents(){
            let homePageObj = document.getElementById('homePage')
            homePageObj.style.display = 'none'

            let eventsPageObj = document.getElementById('eventsPage')
            eventsPageObj.style.display = 'flex'
        }

    </script>

    <!-- Calendar Script! -->
    <script>
        function generate_year_range(start, end) {
            var years = "";
            for (var year = start; year <= end; year++) {
                years += "<option value='" + year + "'>" + year + "</option>";
            }
            return years;
        }

        today = new Date();
        currentMonth = today.getMonth();
        currentYear = today.getFullYear();
        selectYear = document.getElementById("year");
        selectMonth = document.getElementById("month");


        createYear = generate_year_range(1970, 2050);
        /** or
         * createYear = generate_year_range( 1970, currentYear );
         */

        document.getElementById("year").innerHTML = createYear;

        var calendar = document.getElementById("calendar");
        var lang = calendar.getAttribute('data-lang');

        var months =  ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
        var days = ["Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"];

        var $dataHead = "<tr>";
        for (dhead in days) {
            $dataHead += "<th data-days='" + days[dhead] + "'>" + days[dhead] + "</th>";
        }
        $dataHead += "</tr>";

        //alert($dataHead);
        document.getElementById("thead-month").innerHTML = $dataHead;


        monthAndYear = document.getElementById("monthAndYear");
        showCalendar(currentMonth, currentYear);

        function next() {
            currentYear = (currentMonth === 11) ? currentYear + 1 : currentYear;
            currentMonth = (currentMonth + 1) % 12;
            showCalendar(currentMonth, currentYear);
        }

        function previous() {
            currentYear = (currentMonth === 0) ? currentYear - 1 : currentYear;
            currentMonth = (currentMonth === 0) ? 11 : currentMonth - 1;
            showCalendar(currentMonth, currentYear);
        }

        function jump() {
            currentYear = parseInt(selectYear.value);
            currentMonth = parseInt(selectMonth.value);
            showCalendar(currentMonth, currentYear);
        }

        function showCalendar(month, year) {

            var firstDay = ( new Date( year, month ) ).getDay();

            tbl = document.getElementById("calendar-body");

            
            tbl.innerHTML = "";

            
            monthAndYear.innerHTML = months[month] + " " + year;
            selectYear.value = year;
            selectMonth.value = month;

            // creating all cells
            var date = 1;
            for ( var i = 0; i < 6; i++ ) {
                
                var row = document.createElement("tr");

                
                for ( var j = 0; j < 7; j++ ) {
                    if ( i === 0 && j < firstDay ) {
                        cell = document.createElement( "td" );
                        cellText = document.createTextNode("");
                        cell.appendChild(cellText);
                        row.appendChild(cell);
                    } else if (date > daysInMonth(month, year)) {
                        break;
                    } else {
                        cell = document.createElement("td");
                        cell.setAttribute("data-date", date);
                        cell.setAttribute("data-month", month + 1);
                        cell.setAttribute("data-year", year);
                        cell.setAttribute("data-month_name", months[month]);
                        cell.className = "date-picker";
                        cell.innerHTML = "<span>" + date + "</span>";

                        if ( date === today.getDate() && year === today.getFullYear() && month === today.getMonth() ) {
                            cell.className = "date-picker selected";
                        }
                        row.appendChild(cell);
                        date++;
                    }


                }

                tbl.appendChild(row);
            }

        }

function daysInMonth(iMonth, iYear) {
    return 32 - new Date(iYear, iMonth, 32).getDate();
}
    </script>

</body>
</html>